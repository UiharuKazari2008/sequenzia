div
    if (albums && albums.length > 0 )
        div.album-list.flex-column.m-0
            each thisAlbum in albums
                //div.album-list(style='overflow-x: auto; overflow-y:hidden; white-space: nowrap;')
                div.album-item.position-relative
                    div.album-info.position-absolute.shadow-text.text-ellipsis.pl-2.pr-2.pt-1(style="justify-content: left; top: 0;")
                        //x.uri, x.privacy
                        div.album-icon
                            if (thisAlbum.uri === 'gallery')
                                i.fas.fa-photo-video.pr-1
                            else if (thisAlbum.uri === 'files')
                                i.fas.fa-folder.pr-1
                            else if (thisAlbum.uri === 'cards')
                                i.fas.fa-sticky-note.pr-1
                            else
                                i.fas.fa-archive.pr-1
                    div.album-info.position-absolute.shadow-text.text-ellipsis.pl-2.pr-2.pb-1(style="justify-content: left; bottom: 0;")
                        p.m-0.album-owner #{thisAlbum.user}
                        p.m-0.album-name #{thisAlbum.name}
                    a.position-absolute.text-capitalize(style='height: 100%; width: 100%' data-tooltip="tooltip" data-trigger="hover" data-placement="right" title=thisAlbum.name onclick=`$('#albumDirectoryModal').modal('hide')` href=`#/${thisAlbum.uri}?album=${thisAlbum.aid}&sort=album`)
                        if (thisAlbum.image)
                            div.album-preview(style=`background-image: url("${thisAlbum.image}");`)
                        else
                            div.album-preview(style=`background: linear-gradient(31deg, #9f3202, #f7c21c);`)
